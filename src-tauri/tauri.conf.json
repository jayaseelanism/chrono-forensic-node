{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "chrono-forensic-node",
  "version": "1.1.1",
  "identifier": "com.chrono.forensic",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "chrono-forensic-node",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "nsis"],
    "windows": {
      "digestAlgorithm": "sha256",
      "timestampServer": "http://timestamp.digicert.com",
      "certificateThumbprint": null
    }
  }
}